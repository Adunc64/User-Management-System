@model string
@{
    ViewData["Title"] = "Verify your email";
}

<h2 class="mb-3">Verify your email</h2>

<p class="text-muted">
    Normally, this link would be sent to your email.
    For this project/demo, we show it here so you can verify immediately.
</p>

<div class="alert alert-info">
    <div class="fw-semibold mb-1">Verification link:</div>
    <a href="@Model">@Model</a>
</div>

<a class="btn btn-primary" href="/Account/Login">Go to Login</a>
